{
  "name": "taxi-control-nextjs",
  "version": "1.0.6",
  "private": true,
  "main": "dist-electron/main/index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"next dev\" \"wait-on http://localhost:3000 && tsc -p electron/tsconfig.json && electron .\"",
    "electron:build": "next build && tsc -p electron/tsconfig.json && electron-builder",
    "electron:build:mac": "next build && tsc -p electron/tsconfig.json && electron-builder --mac",
    "electron:build:win": "next build && tsc -p electron/tsconfig.json && electron-builder --win --x64",
    "electron:build:linux": "next build && tsc -p electron/tsconfig.json && electron-builder --linux",
    "electron:publish": "next build && tsc -p electron/tsconfig.json && electron-builder --mac --win -p always",
    "electron:publish:mac": "next build && tsc -p electron/tsconfig.json && electron-builder --mac -p always",
    "electron:publish:win": "next build && tsc -p electron/tsconfig.json && electron-builder --win --x64 -p always",
    "release": "npm version patch && git push && git push --tags",
    "release:minor": "npm version minor && git push && git push --tags",
    "release:major": "npm version major && git push && git push --tags"
  },
  "build": {
    "appId": "com.ftnh.callagent",
    "productName": "FTNH Call Agent",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*",
      "package.json",
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "mqtt/**/*",
          "mqtt-packet/**/*",
          "bl/**/*",
          "readable-stream/**/*",
          "buffer/**/*",
          "process/**/*",
          "process-nextick-args/**/*",
          "events/**/*",
          "inherits/**/*",
          "util-deprecate/**/*",
          "safe-buffer/**/*",
          "string_decoder/**/*",
          "number-allocator/**/*",
          "debug/**/*",
          "ms/**/*",
          "lru-cache/**/*",
          "typed-emitter/**/*",
          "help-me/**/*",
          "concat-stream/**/*",
          "split2/**/*",
          "commist/**/*",
          "minimist/**/*",
          "core-util-is/**/*",
          "isarray/**/*",
          "typedarray/**/*",
          "ws/**/*",
          "rfdc/**/*",
          "extend/**/*",
          "xtend/**/*",
          "sbcs/**/*"
        ]
      }
    ],
    "asar": true,
    "extraResources": [],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business"
    },
    "win": {
      "target": "nsis",
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "public/icon.ico",
      "uninstallerIcon": "public/icon.ico",
      "installerHeaderIcon": "public/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FTNH Call Agent"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "publish": {
      "provider": "github",
      "owner": "idompolo",
      "repo": "call-agent",
      "releaseType": "release"
    }
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "mqtt": "^5.14.0"
  },
  "devDependencies": {
    "@hookform/resolvers": "^3.6.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@tanstack/react-query": "^5.40.0",
    "@tanstack/react-query-devtools": "^5.40.0",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.7.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "date-fns": "^3.6.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "14.2.3",
    "lodash-es": "^4.17.21",
    "lucide-react": "^0.379.0",
    "next": "14.2.3",
    "next-themes": "^0.3.0",
    "postcss": "^8.4.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.51.5",
    "socket.io-client": "^4.7.5",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.3.0",
    "tailwindcss": "^3.4.3",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.4.5",
    "use-debounce": "^10.0.5",
    "wait-on": "^7.2.0",
    "zod": "^3.23.8",
    "zustand": "^4.5.2"
  }
}
